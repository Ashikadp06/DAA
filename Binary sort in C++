#include <iostream>
using namespace std;

int binarySearch(int arr[], int item, int low, int high) {
    while (low <= high) {
        int mid = (low + high) / 2;

        if (item == arr[mid])
            return mid + 1;
        else if (item > arr[mid])
            low = mid + 1;
        else
            high = mid - 1;
    }
    return low;
}

int main() {
    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    int arr[n];
    cout << "Enter elements:\n";
    for(int i = 0; i < n; i++)
        cin >> arr[i];

    for(int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        int loc = binarySearch(arr, key, 0, j);

        while(j >= loc) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }

    cout << "Sorted array:\n";
    for(int i = 0; i < n; i++)
        cout << arr[i] << " ";

    return 0;
}
OUTPUT:
Enter number of elements: 7
Enter elements:
1 3 5 7 9 11 13
Sorted array:
1 3 5 7 9 11 13 

=== Code Execution Successful ===
